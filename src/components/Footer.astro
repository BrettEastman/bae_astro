---
// Server Side
import Social from "./Social.astro";

const socials = [
  { platform: "instagram", username: "brettaustineastman" },
  { platform: "linkedin", username: "in/brett-austin-eastman" },
  { platform: "github", username: "BrettEastman" },
];

const bgClass = "bg-primary80 dark:bg-primary10";
const aClass = "justify-center hover:text-accentDark duration-200";
---

<div
  class={`${bgClass} p-8 text-primary30 dark:text-primary70 flex justify-center`}
>
  <footer class="flex flex-col gap-2">
    <div class="flex flex-row gap-4 justify-center">
      <a
        class="underline hover:text-accentDark duration-200"
        rel="noreferrer"
        target="_blank"
        href="https://github.com/BrettEastman/bae_astro">View source code</a
      >
      <a
        class="underline hover:text-accentDark duration-200"
        rel="noreferrer"
        target="_blank"
        href="https://www.bretteastman.dev/">View developer portfolio</a
      >
    </div>
    <div class="socials">
      {
        socials.map((social) => (
          <Social platform={social.platform} username={social.username} />
        ))
      }
    </div>
    <p id="copyright" class="mt-2 text-center"></p>
  </footer>
</div>

<script>
  // Client Side
  const copyright = document.getElementById("copyright");
  if (copyright) {
    copyright.innerHTML = `Â©${new Date().getFullYear()} Lost Lanes Publishing`;
  }
</script>
