---
// Server Side
const bgClass = "bg-gray-light-shade-900 dark:bg-gray-dark-shade-900";
import githubIcon from "../icons/github-142-svgrepo-com.svg";
import instagramIcon from "../icons/instagram-svgrepo-com.svg";
import linkedInIcon from "../icons/linkedin-rounded-svgrepo-com.svg";
const aClass = "border-b hover:text-gray-400 duration-300";
---

<div class={`${bgClass} p-8 text-gray-light-300 dark:text-gray-dark-200`}>
  <footer class="flex flex-col gap-2">
    <p>
      Designed and developed by <a
        href="https://www.bretteastman.dev/"
        class={aClass}>Brett Austin Eastman</a
      >: Astro | Typescript | React | Tailwind
    </p>
    <div class="flex flex-row gap-4">
      <a
        class="underline hover:text-gray-400 duration-300"
        rel="noreferrer"
        target="_blank"
        href="https://github.com/BrettEastman/bae_astro">View source code</a
      >
      <a
        class="underline hover:text-gray-400 duration-300"
        rel="noreferrer"
        target="_blank"
        href="https://www.bretteastman.dev/">View developer portfolio</a
      >
    </div>
    <div class="flex flex-row gap-4 pt-2">
      <p>Connect with me:</p>
      <a href="https://github.com/BrettEastman" target="_blank">
        <img src={githubIcon.src} alt="" width={20} class="cursor-pointer" /></a
      >
      <a
        href="https://www.linkedin.com/in/brett-austin-eastman/"
        target="_blank"
      >
        <img
          src={linkedInIcon.src}
          alt=""
          width={20}
          class="cursor-pointer"
        /></a
      >
      <a href="https://www.instagram.com/brettaustineastman/" target="_blank">
        <img
          src={instagramIcon.src}
          alt=""
          width={20}
          class="cursor-pointer"
        /></a
      >
    </div>
    <p id="copyright" class="mt-12 text-center"></p>
  </footer>
</div>

<script>
  // Client Side
  const copyright = document.getElementById("copyright");
  if (copyright) {
