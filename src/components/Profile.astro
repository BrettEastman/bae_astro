---
/**
 * A layout that displays an image, title and description of a staff member.
 */

import { Image } from 'astro:assets';

interface Props {
    alt: string;
    imageMetaData: ImageMetadata;
    name: string;
}

const { alt, imageMetaData, name, title } = Astro.props;
---

<div class="py-4">
    <div class="flex flex-col items-center justify-center">
        <Image width={500} alt={alt} src={imageMetaData} />
        <h2 class="py-4 font-medium text-20">{name}</h2>
    </div>
    <div class="grid gap-2 body-1">
    <slot />
    </div>
</div>