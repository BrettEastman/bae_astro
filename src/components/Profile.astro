---
// Server Side
import { Image } from "astro:assets";

interface Props {
  alt: string;
  imageMetaData: ImageMetadata;
  name?: string;
}

const { alt, imageMetaData, name } = Astro.props;
---

<div class="py-4">
  <div class="flex flex-col items-center justify-center">
    <Image width={750} alt={alt} src={imageMetaData} class="rounded-lg"/>
    <h2 class="py-4 font-medium text-20">{name ? name : ""}</h2>
  </div>
</div>
