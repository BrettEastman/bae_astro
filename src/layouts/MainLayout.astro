---
// Server Side
import "../styles/global.css";
import NameHeader from "../components/NameHeader.astro";
// import NavBar from "../components/NavBar.jsx";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="description"
      content="Brett Austin Eastman is a software engineer, musician, audio engineer, and composer"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/BAEicon64.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <div
        class="border-b-2 border-primary-light-shade-500 mb-8 dark:border-primary-dark-900 bg-gray-light-300 dark:bg-gray-dark-900 pt-[10px] sm:pt-[58px] z-50"
      >
        <NameHeader class="pb-4" />
        <!-- <NavBar client:load /> -->
        <Header />
      </div>
      <main class="grow p-4">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
