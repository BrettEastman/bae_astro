---
// Server Side
import MainLayout from "../layouts/MainLayout.astro";
const ulClass = "mb-4 p-2";
const aClass =
  "border-b border-primary10 dark:border-primary70 hover:text-accentDark hover:border-none duration-200";

const pageTitle = "About";
const description =
  "Here you will find a list of selected classical and new music compositions by Brett Austin Eastman.";
---

<MainLayout title={pageTitle} description={description}>
  <h3 class="flex justify-around uppercase text-3xl md:text-4xl mt-4 pb-8">
    Selected Works
  </h3>
  <div class="flex flex-col max-w-5xl m-auto">
    <div class="leading-relaxed text-lg md:text-xl">
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/s_re25nOkq8" target="_blank"
          ><em>Internal/External</em></a
        >, for solo flute and Max MSP electronics (2022) -
        <a class={aClass} href="/shop/score-1"><b>score</b></a>
      </ul>
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/J451WMaAms8" target="_blank"
          ><em>Glimmer/Glow</em></a
        >, for two pianists and two percussionists (2021)
      </ul>
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/o5zRH8hLEc0" target="_blank"
          ><em>How Deep is the Valley</em></a
        >, for piano and Max MSP electronics (2020)
      </ul>
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/1y72j58PL-Y" target="_blank"
          ><em>Passover</em></a
        >, for solo flute (2020) -
        <a class={aClass} href="/shop/score-5" target="_blank"><b>score</b></a>
      </ul>
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/HyKHnJb5nfI" target="_blank"
          ><em>In Response</em></a
        >, for solo flute and fixed media (2019)
      </ul>
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/CbMFIUBiRjg" target="_blank"
          ><em>Paraphrase</em></a
        >, for bass clarinet, viola, and piano (2019) -
        <a class={aClass} href="/shop/score-2" target="_blank"><b>score</b></a>
      </ul>
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/S7T-7jmADfA" target="_blank"
          ><em>Keepsake (for Rishi)</em></a
        >, for amplified contrabass flute and contraforte (2018) -
        <a
          class={aClass}
          href="https://drive.google.com/file/d/1qR65uv7CkxfHIUbQVhsGZmMe7ZxnwqHF/view?usp=sharing"
          target="_blank"><b>score</b></a
        >
      </ul>
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/ym51ZzgkxN0" target="_blank"
          ><em>La Musique</em></a
        >, for flute and alto flute (2017) -
        <a class={aClass} href="/shop/score-3" target="_blank"><b>score</b></a>
      </ul>
      <ul class={ulClass}>
        <a class={aClass} href="https://youtu.be/qX9J_GU7hwI" target="_blank"
          ><em>MISMA</em></a
        >, for violin, clarinet, cello, and piano (2017)
      </ul>
      <ul class={ulClass}>
        <a
          class={aClass}
          href="https://soundcloud.com/brett-austin-eastman-1/mainframe-movements-4-5-6-7"
          target="_blank"><em>MAINFRAME</em></a
        > for string quartet (2016) -
        <a class={aClass} href="/shop/score-4" target="_blank"><b>score</b></a>
      </ul>
    </div>
  </div>
</MainLayout>
